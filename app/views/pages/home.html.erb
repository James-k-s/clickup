<div class="dashboard_nav">
  <h1>Good morning <%= @user_name %> ☀️</h1>
  <div class="dash_icons">
    <i class="bi bi-chat-left-dots"></i>
    <i class="bi bi-bell"></i>
     <div class="dropdown" style="display: inline;">
        <i class="bi bi-person-circle" id="navbarDropdown" data-bs-toggle="dropdown" aria-expanded="false"></i>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
          <li><%= link_to "Profile", edit_user_registration_path, class: "dropdown-item" %></li>
          <li><%= link_to "Logout", destroy_user_session_path, class: "dropdown-item", data: { turbo: false } %></li>
        </ul>
      </div>
  </div>
</div>

<div class="dash_search new-card-style">
  <i class="bi bi-search"></i>
  <p>Search for a keyword...</p>
</div>

<div class="stats">

  <div class="stat_card new-card-style">
    <h4>  <i class="bi bi-list-task nav_icon"></i> Total tasks</h4>
    <h2><%= @tasks.count %></h2>
  </div>

  <div class="stat_card new-card-style">
    <h4> <i class="bi bi-check2-square nav_icon"></i>Completed</h4>
    <h2><%= @tasks.where(status: "Completed").count %></h2>
  </div>

  <div class="stat_card new-card-style">
    <h4> <i class="bi bi-archive nav_icon"></i>To do</h4>
    <h2><%= @tasks.where(status: "To do").count %></h2>
  </div>

  <div class="stat_card new-card-style">
    <h4><i class="bi bi-alarm nav_icon"></i></i>Urgent tasks</h4>
    <h2><%= @tasks.where(priority: "Urgent").count%></h2>
  </div>

</div>
