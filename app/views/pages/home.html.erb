<div class="home-container">
<div class="floating-emojis">
  <% ["🌟", "🔥", "💡", "✅", "📚", "🏃‍♂️", "📈","🧘‍♂️"].each_with_index do |emoji, i| %>
    <span class="emoji" id="emoji-<%= i %>"><%= emoji %></span>
  <% end %>
</div>
<div class="dashboard_nav">
  <div class="dash_icons">
    <i class="bi bi-chat-left-dots"></i>
    <i class="bi bi-bell"></i>
     <div class="dropdown" style="display: inline;">
        <i class="bi bi-person-circle" id="navbarDropdown" data-bs-toggle="dropdown" aria-expanded="false"></i>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
          <li><%= link_to "Profile", edit_user_registration_path, class: "dropdown-item" %></li>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item", data: { turbo: false } %>
        </ul>
      </div>
  </div>
</div>


  <div class="banner">
    <div class="heading">
      <h1>Organize Your Life</h1>
      <h1>Effortlessly</h1>
    </div>
    <p>Create tasks, build lists, and develop lasting habits with our simple yet powerful task management platform.</p>
    <%# <div class="home-buttons">
      <%= link_to "Start planning today", tasks_path, class: "btn btn-primary", id: "btn-1" %>
      <%# <%= link_to "Track your habits", habit_trackers_path, class: "btn btn-secondary", id: "btn-2" %>
    <%# </div> %>
  </div>

  <div class="home-cards">
    <div class="card">
      <h2>Organize Tasks</h2>
      <div class="text-card">
        <p>Organize your day with intelligent task scheduling and time management</p>
      </div>
      <%= link_to "View Tasks", tasks_path, class: "btn-1 " %>
    </div>

    <div class="card">
      <h2>Track Habits</h2>
      <div class="text-card">
        <p>Build lasting habits with visual progress tracking and streak counters</p>
      </div>
      <%= link_to "View Habits", habit_trackers_path, class: "btn-2 " %>
    </div>

    <div class="card">
      <h2>Make lists</h2>
      <div class="text-card">
        <p>Compile lists, set priorities, and keep track of your lists effortlessly.</p>
      </div>
      <%= link_to "View Lists", lists_path, class: "btn-3 " %>
    </div>

  </div>

</div>
